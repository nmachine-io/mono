apiVersion: v1
kind: Service
metadata:
  namespace: <%= values[:release_name] %>
  name: <%= values[:service][:name] %>
  labels:
    app: <%= values[:service][:name] %>
  annotations:
spec:
  type: ClusterIP
  ports:
  - name: main
    port: <%= values[:service][:port] %>
  selector:
    app: <%= values[:pod][:name] %>

---

apiVersion: v1
kind: Pod
metadata:
  namespace: <%= values[:release_name] %>
  name: <%= values[:pod][:name] %>
  labels:
    app: <%= values[:pod][:name] %>
spec:
  containers:
  - name: main
    image: <%= values[:pod][:image] %>
    imagePullPolicy: Always